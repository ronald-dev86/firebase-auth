---
import { Icon } from 'astro-icon/components'
import type { IPages } from "../common/pages.interfaces"
const { data } = Astro.props
const selected = (data.active === true) ? "selected" : "unselected"
---
<li class={selected}>
    <a href={data.url}> 
    <Icon class="icon w-5" name={data.icon} />
    <h4 class=" hidden md:block w-5">{data.name}</h4>
    </a>
</li>

<style>
    li {
        justify-content: flex-start;
        margin: 5px 0px 5px 10px;
        
    }
    a{
        display: flex;
        flex-wrap: nowrap;
        align-items: center;
        padding: 10px 15px;
    }
    a > .icon{
        margin-right: 8px;
    }

    .selected{
        justify-content: flex-start;
        margin: 5px 0px 5px 10px;
        background: #001E61;
        font-size: 15px;
        font-weight: 500;
        color: #fff;
        border-radius: 30px 0 0 30px;
    }
    .selected:hover{
        background: #001E61;
        border-radius: 30px 0 0 30px;
    }

    .unselected:hover{	
        background: #e5e5e5;
        color: #000;
        border-radius: 30px 0 0 30px;
    }

</style>
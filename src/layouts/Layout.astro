---
import SiderBar from "../components/SiderBar.astro";

const { title , selector} = Astro.props;
const is_cookied = Astro.locals.token;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-50 dark:bg-gray-900">
		{
			is_cookied === undefined ? 
			<slot />
			:
			<div class="flex h-screen w-full">
        		<SiderBar app_name="Demo Astro" selector={selector}	></SiderBar>
        		<div class="block h-screen w-full">
            		<nav class="w-full">
               		 <slot />
            		</nav>
            
        		</div>
    		</div>
		}
		
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
